<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sharmistha.pizza">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PizzaActivity"
            android:label="@string/pizza_text" />
        <activity
            android:name=".HelpActivity"
            android:label="@string/help_text" />
         <activity
         android:name=".ReviewUpdateOrderActivity"
         android:label="@string/review_update_order" />
         <activity android:name=".PlacedOrderDialogActivity"
         android:label="@string/confirmation_message"/>
        <activity android:name=".DrinkActivity"
            android:label="@string/drink_text"></activity>
    </application>

</manifest>